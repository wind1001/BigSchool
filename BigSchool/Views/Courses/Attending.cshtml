@model BigSchool.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Attending</h2>
<ul class="course">
    @foreach (var course in Model.UpcommingCourses)
    {
        <li>
            <div class="date">
                <div class="month">@course.DateTime.ToString("mm")</div>
                <div class="day">@course.DateTime.ToString("dd")</div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                    @if (course.IsCanceled)
                    {
                        <span class="label label-warning">Canceled</span> 
                    }
                    @if (Model.ShowAction &&!course.IsCanceled)
                    {
                        <button class="btn btn-default btn-sm js-toggle-follow" data-user-id="@course.LecturerId">Follow</button>
                    }
                </span>
                <span class="category">@course.Category.Name</span>
                @if (Model.ShowAction)
                {
                    <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
                }
            </div>
        </li>
       @* <li>
            @course.DateTime - @course.Lecturer.Name
        </li>*@
    }
</ul>

